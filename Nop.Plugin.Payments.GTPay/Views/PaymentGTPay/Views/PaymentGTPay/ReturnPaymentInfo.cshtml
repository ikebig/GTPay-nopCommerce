@{
    Layout = "_ColumnsTwo.cshtml";
}
@model Nop.Plugin.Payments.GTPay.Models.ReturnPaymentInfoModel
@using Nop.Web.Framework;
<table width="100%" cellpadding="0" cellspacing="0">
    <tr style="color: Red; font-weight: bold;">
        <td>
            @Html.Raw(Model.DescriptionText)
        </td>
    </tr>
    <tr>
        <td>
            <br /> Order ID: @Html.Raw(Model.OrderId.ToString())
        </td>
    </tr>
    <tr>
        <td>
            <br />Status code: @Html.Raw(Model.StatusCode)
        </td>
    </tr>
    <tr>
        <td>
            <br />Message: @Html.Raw(Model.StatusMessage)
        </td>
    </tr>
    <tr>
        <td>
            <br /><a href="@Url.RouteUrl("OrderDetails", new { orderID = @Model.OrderId })">@T("Checkout.PlacedOrderDetails")</a>
        </td>
    </tr>
</table>
<br />
<div class="clear">
</div>
<div class="select-button">
    <input type="submit" name="nextstep" value="@T("Checkout.Continue")" id="nextstep" class="orderprocessedcontinuebutton" onclick="setLocation('@Url.RouteUrl("HomePage")')" />
</div>
